{
	"name": "budget-tracker-mern-master",
	"version": "1.0.0",
	"description": "MERN Stack Budget Tracker",
	"main": "server.js",
	"scripts": {
		"start": "node server",
		"build": "cd client && npm run build",
		"install-client": "cd client && npm install",
		"heroku-postbuild": "npm run install-client && npm run build",
		"server": "nodemon server",
		"client": "npm start --prefix client",
		"dev": "concurrently \"npm run server\" \"npm run client\""
	},
	"author": "Dev Sah",
	"license": "MIT",
	"dependencies": {
		"colors": "^1.4.0",
		"dotenv": "^8.2.0",
		"express": "^4.18.2",
		"mongoose": "^5.9.15",
		"morgan": "^1.10.0"
	},
	"devDependencies": {
		"concurrently": "^5.2.0",
		"nodemon": "^2.0.4"
	}
}
